{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "~components/*": ["src/components/*"],
      "~containers/*": ["src/containers/*"],
      "~static/*": ["src/static/*"],
      "~theme/*": ["src/theme/*"],
      "~store/*": ["src/store/*"],
      "~hooks/*": ["src/hooks/*"],
      "~service/*":["src/service/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
